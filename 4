package avaliacaoformativa;
import java.util.Scanner;
public class atividade5 {

	public static void main(String[] args) {
		double tempodeserviço =2;
		double salario = 1000.00;
		
		double bonus;
		if(tempodeserviço <= 3) {
			bonus = salario * 0.05;
		}else {
			bonus = salario * 0.07;
		}
		
		System.out.println("salário + bonus:"+ (salario + bonus));
	}
}
